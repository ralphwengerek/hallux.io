{
  "name": "hallux",
  "version": "1.0.0",
  "description": "A personal site",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node build/server/server.js",
    "serve": "cross-env NODE_ENV=development parcel src/client/index.html",
    "prebuild": "rm -rf .cache/ src/server/public/* build",
    "build": "cross-env NODE_ENV=production babel src -d build && parcel build src/client/index.html --out-dir build/server/public --no-source-maps",
    "heroku-postbuild": "NODE_ENV=production babel src -d build && parcel build src/client/index.html --out-dir build/server/public --no-source-maps",
    "pretest": "yarn run test:eslint",
    "test:eslint": "eslint src/ --ext .js --ext .jsx",
    "test": "jest --watch",
    "e2e": "cypress run --reporter junit --reporter-options mochaFile=results/output.xml",
    "lint:css": "stylelint './src/**/*.jsx'",
    "server": "cross-env NODE_ENV=development nodemon --watch src/server --exec babel-node src/server/server.js"
  },
  "dependencies": {
    "@babel/register": "^7.5.5",
    "@sendgrid/mail": "^6.4.0",
    "@testing-library/cypress": "^4.1.1",
    "@testing-library/jest-dom": "^4.0.1",
    "@testing-library/react": "^9.1.3",
    "@testing-library/user-event": "^4.2.4",
    "antd": "^3.22.0",
    "auth0-js": "^9.11.3",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "connected-react-router": "^6.5.2",
    "cors": "^2.8.5",
    "disqus-react": "^1.0.6",
    "dotenv": "^8.1.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-session": "^1.16.2",
    "faker": "^4.1.0",
    "formik": "^1.5.8",
    "helmet": "^3.20.0",
    "history": "^4.9.0",
    "immer": "^3.2.0",
    "jwks-rsa": "^1.6.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.6.9",
    "morgan": "^1.9.1",
    "normalize.css": "^8.0.1",
    "normalizr": "^3.4.1",
    "prism-react-renderer": "^0.1.7",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "npm:@hot-loader/react-dom",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.12.11",
    "react-icons": "^3.7.0",
    "react-mde": "^7.6.2",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-transition-group": "^4.2.2",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "shortid": "^2.2.14",
    "showdown": "^1.9.0",
    "styled-components": "^4.3.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-async-generators": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@mdx-js/parcel-plugin-mdx": "^1.3.1",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^5.2.0",
    "cypress": "^3.4.1",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^6.2.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "lint-staged": "^9.2.3",
    "node-sass": "^4.12.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-eslint": "^1.0.7",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "prettier": "^1.18.2",
    "react-hooks-testing-library": "^0.6.0",
    "redux-devtools": "^3.5.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0"
  },
  "peerDependencies": {
    "react-test-renderer": "^16.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add ."
    ],
    "*.{scss,css,md}": [
      "prettier --write",
      "git add ."
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/src/**/index.js"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/react/cleanup-after-each",
      "@testing-library/jest-dom/extend-expect",
      "jest-styled-components",
      "<rootDir>/src/config/setupTests.js"
    ]
  },
  "eslintIgnore": [
    "/src/config/setupTests.js",
    "/coverage/*",
    "/dist/*"
  ],
  "author": "Ralph Wengerek",
  "license": "ISC",
  "staticFiles": {
    "staticPath": [
      "./src/client/static"
    ]
  },
  "engines": {
    "node": "12.4.0"
  }
}
